@model ComicBookGallery.Models.ComicBook[]

@{
    ViewBag.Title = "Comic Books";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    @foreach (var comicBook in Model)
    {
        <div class="col-md-4">
            <h5>@Html.ActionLink(comicBook.DisplayText, "Detail",
               new { id = comicBook.Id })</h5>
            <a href="@Url.Action("Detail", new { id = comicBook.Id})"><img src="https://unsplash.it/300/500/?random" alt="@comicBook.DisplayText" class="img-responsive" /></a>
        </div>
    }

</div>
